</div>
<div>
    <h3 class="h2">@*Select Car Status*@</h3>
    <br />
    <table class="table">
        <tr>
            <th style="width:32%;text-align:right;padding-top:19px;">Transaction Type</th>
            <td style="width:71%"><select class="wrapper-dropdown-5"><option>Pending Approval</option></select></td>
        </tr>
    </table>
</div>
<br /><br /><br />
<div>
    <table style="width:100%">
        <tr>
            <td style="text-align:center;padding-right:700px">
                <input type="submit" onclick="SendToAnother()" value="Send To Another" style="border-radius:14px;" />&nbsp;&nbsp;&nbsp;
                <input type="submit" onclick="Approve()" value="Approve" style="border-radius:14px;" />&nbsp;&nbsp;&nbsp;
                <input type="submit" onclick="Reject()" value="Dis-Approve" style="border-radius:14px;" />
            </td>
        </tr>
    </table>
</div>
<br /><br />
<div style="text-align:center;">
    <h4 style="padding-right:400px" id="result"></h4>
</div>
<script>
    function SendToAnother() {
        $('#result').text("Process is send to next level Approval.");
        $('#result').css("color", "green");
    }

    function Approve() {
        $('#result').text("Procee Approved Successfully.");
        $('#result').css("color", "green");
    }

    function Reject() {
        $('#result').text("Procee Rejected.");
        $('#result').css("color", "red");
    }

</script>